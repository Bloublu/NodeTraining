<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset='utf-8'>
    <title>Todo List</title>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <link rel='stylesheet' type='text/css' media='screen' href='main.css'>
</head>
<body>
    <h1>Todo List</h1>

    <form action="/task" method="POST">
        <input type="text" name="task" placeholder="Nouvelle Tache" autofocus>
        <button type="submit">Ajouter</button>
    </form>

    <h3>Mes Taches :</h3>
    <ul>
        <% tasks.forEach((task, idx) =>{ %>
            <li>
                <% if(task.done){ %>
                    <strong><%= idx %></strong>
                    <s><%= task.title %></s> | <a href="/task/<%= idx %>/delete">Supprimer</a>                    
                <% } else { %>                   
                    <strong><%= idx %></strong>
                    <%= task.title %> | <a href="/task/<%= idx %>/done">Terminer</a>
                <% } %>
            </li>
        <% }) %>
    </ul>
    
</body>
</html>